<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:divider="?android:dividerHorizontal"
    android:showDividers="middle"
    android:padding="16dp"
    tools:context=".CustomListView">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Блок названия отработки -->
        <TextView
            android:id="@+id/reception_name_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Название:"
            android:textStyle="bold"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/reception_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textSize="16sp" />

        <!-- Блок даты отработки -->
        <TextView
            android:id="@+id/reception_date_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Дата:"
            android:textStyle="bold"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/reception_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textSize="16sp" />

        <!-- Блок кабинета отработки -->
        <TextView
            android:id="@+id/reception_room_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Кабинет:"
            android:textStyle="bold"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/reception_room"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp" />

    </LinearLayout>

    <Button
        android:id="@+id/go_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="Перейти" />

</LinearLayout>